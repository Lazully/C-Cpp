void inverte_frase(char *pf, char *pi)
{
	int i, tam;
	tam-strlen(pf);
	pf+=tam-1; //pf=pf+tam-1 posiciona para a última letra da frase
	for(i=0;i<tam;i++,pf--,pi++)
	*pi=*pf;
	*pi='\0';
}//inverte frase




